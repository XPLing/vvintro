.vintro
  & *
    margin 0
    padding 0
  .overlay
    position fixed
    z-index 999997
    left 0
    right 0
    top 0
    bottom 0
    background radial-gradient(ellipse farthest-corner at center, rgba(0, 0, 0, 0.4) 0, rgba(0, 0, 0, 0.9) 100%)
    opacity 0.8
    transition opacity .3s 1s

  .helper
    position absolute
    z-index 999998
    background-color #fff
    transition .3s

  .tootip-layer
    position absolute
    z-index 999999
    transition .3s

    .step
      display: inline-block
      position: absolute
      top: 0
      left: 10px
      height: 30px
      padding: 0 8px
      color: #fff
      line-height: 30px
      font-size: 24px
      font-style normal
      font-weight bold
      text-align: center
      background-color: #f56c6c
      border-radius: 20px
      border: 2px solid #fff
      transform: translateY(-50%)
      white-space: nowrap
      box-shadow: 0 2px 5px rgba(0, 0, 0, .4)

    .tootip
      position: absolute
      bottom -10px
      left 0
      padding: 10px
      margin-bottom 15px
      min-width: 200px
      max-width: 300px
      visibility: visible
      transform: translateY(calc(100% + 15px))
      transition: opacity .1s ease-out
      border-radius: 3px
      box-shadow: 0 1px 10px rgba(0, 0, 0, .4)
      background-color: white
      box-sizing: content-box

      .tootip-buttons
        text-align right
        margin-top 10px

        .tootip-button
          box-sizing: content-box
          position: relative
          overflow: visible
          display: inline-block
          padding: .3em .8em
          border: 1px solid #d4d4d4
          border-radius: .2em
          margin: 0
          text-decoration: none
          text-shadow: 1px 1px 0 #fff
          font: 11px / normal sans-serif
          color: #333
          white-space: nowrap
          cursor: pointer
          outline: 0
          background-color: #ececec
          background-image: linear-gradient(#f4f4f4, #ececec)

          & + .tootip-button
            margin-left 6px


      .tootip-bullets
        text-align: center

        .bullet-list
          box-sizing: content-box
          clear: both
          margin: 15px auto 0
          padding: 0
          display: inline-block

          .bullet-item
            box-sizing: content-box
            list-style: none
            float: left
            margin: 0 2px

            a
              box-sizing: content-box
              display: block
              width: 6px
              height: 6px
              background: #ccc
              border-radius: 10px
              text-decoration: none
              cursor: pointer

              &:hover, &.active
                background: #999

      .tootip-arrow
        border: 5px solid white
        content: ''
        position: absolute

        &.top
          top: -10px
          border-top-color: transparent
          border-right-color: transparent
          border-bottom-color: white
          border-left-color: transparent

.fade-enter-active
  transition: all .3s ease

.fade-leave-active
  transition: all .5s cubic-bezier(1.0, 0.5, 0.8, 1.0)

.fade-enter, .fade-leave-to
  opacity: 0
